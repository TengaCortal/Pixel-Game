    <body>

        

        <% if (!logged){ %>
        
            <div class="overlay"> <a style="text-decoration:none" href="/">
                <h1 id="menu"> Super Pixel Game!</h1>
            </a> </div>
        
        <% }else{ %>

            <a id="menu" style="text-decoration:none" href="/">
                <h1 > Super Pixel Game!</h1>
            </a>
        
        <% } %>

        <h2> <%= name %> </h2>

        <div id="curseur"></div>

        <canvas id="SUPER"></canvas>
        
        <div id="time">Temps restant avant la pose d'un nouveau pixel: <p id="timer"></p></div>

        <div id="couleurs"></div>


        <script> let matrice = []</script>

        <% pixels.forEach(pixel =>{ %>
            <script> 
                matrice.push(<%= pixel.ligne %>)
                matrice.push(<%= pixel.colonne %>)
                matrice.push(<%= pixel.red %>)
                matrice.push(<%= pixel.green %>)
                matrice.push(<%= pixel.blue %>)
            </script>
        <% }); %>
        
        <script> 
            let width = <%= width %>;
            let height = <%= height %>;
            let duree = <%= duree %>;    
        </script>
        
        <script src="/assets/js/canva.js"></script>

    </body>
